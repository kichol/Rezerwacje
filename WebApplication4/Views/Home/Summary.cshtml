@model IEnumerable<WebApplication4.Models.Reservation>
    <div class="panel-heading">Rezerwacje</div>
<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr><th>ID</th><th>Nazwisko</th><th>Lokalizacja</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ReservationId</td>
                    <td>@item.ClientName</td>
                    <td>@item.Location</td>
                    <td>@Html.ActionLink("Usuń","Remove",new { id=item.ReservationId},new { @class="btn btn-xs btn-primary"})</td>
                </tr>

            }
        </tbody>
    </table>
</div>